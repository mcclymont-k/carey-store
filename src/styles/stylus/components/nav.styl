// Styling for Nav bar
@import '../variables.styl'

nav
  display grid
  font-family Muli
  grid-template-columns 1fr 1fr
  margin-top 1rem
  ul
    align-items baseline
    display flex
    flex-direction row
    img
      height 2rem
      padding 0 1rem
      width auto

    li
      font-size 1rem
      list-style none
      padding 0 1rem
      a
        color gray-font
        cursor pointer
        line-height 0.2rem
        position relative
        text-decoration none
      a:before
        content ""
        background-color gray-font
        position absolute
        width 100%
        height 1px
        bottom 0
        left 0
        visibility hidden
        -webkit-transform scaleX(0)
        transform scaleX(0)
        -webkit-transition all 0.4s ease-in-out 0s
        transition all 0.4s ease-in-out 0s
      a:hover:before
        visibility visible
        -webkit-transform scaleX(1)
        transform scaleX(1)

  .right
    display inline-block
    margin-right 1rem
    li
      i
        color gray-font
        float right
        font-size 1.2rem
